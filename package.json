{
		"private": true,
		"homepage": "https://dmk255.github.io/lerna-webpack-example/",
		"workspaces": [
				"packages/*"
		],
		"devDependencies": {
				"@babel/cli": "^7.0.0-beta.42",
				"@babel/core": "^7.0.0-beta.42",
				"@babel/plugin-syntax-dynamic-import": "^7.0.0-beta.42",
				"@babel/preset-env": "^7.0.0-beta.42",
				"@babel/preset-react": "^7.0.0-beta.42",
				"babel-eslint": "^8.2.2",
				"babel-loader": "^8.0.0-beta",
				"concurrently": "^3.5.1",
				"eslint": "^4.18.2",
				"eslint-config-airbnb": "^16.1.0",
				"eslint-plugin-import": "^2.9.0",
				"eslint-plugin-jsx-a11y": "^6.0.3",
				"eslint-plugin-react": "^7.7.0",
				"gh-pages": "^1.1.0",
				"html-loader": "^0.5.5",
				"html-webpack-plugin": "^3.0.6",
				"lerna": "^2.9.0",
				"source-map-loader": "^0.2.3",
				"webpack": "^4.1.1",
				"webpack-cli": "^2.0.12",
				"webpack-dev-server": "^3.1.1"
		},
		"scripts": {
				"prebuild": "lerna exec --parallel -- rimraf lib dist",
				"bootstrap": "lerna bootstrap --use-workspaces",
				"dev": "concurrently \"yarn watch\" \"lerna run dev --stream\"",
				"lint": "lerna exec --parallel -- eslint src",
				"build": "lerna exec --parallel -- babel src -d lib --config-file ../../.babelrc && lerna run build:webpack",
				"release": "yarn lint && yarn build && lerna publish",
				"predeploy": "yarn build",
				"deploy": "gh-pages -d packages/orchestra/dist",
				"watch": "lerna exec --parallel -- babel src -d lib --config-file ../../.babelrc -w"
		}
}
